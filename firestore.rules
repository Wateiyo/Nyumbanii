rules_version = '2';
// Updated: 2025-01-05 - Added landlordSettings protection
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated(); // Allow authenticated users to read user profiles
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Landlord Settings collection - only accessible by the landlord themselves
    match /landlordSettings/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Properties collection
    match /properties/{propertyId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.landlordId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.landlordId == request.auth.uid;
    }
    
    // Listings collection
    match /listings/{listingId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.landlordId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.landlordId == request.auth.uid;
    }
    
    // Tenants collection
    match /tenants/{tenantId} {
      allow read, write: if isAuthenticated();
    }
    
    // Payments collection
    match /payments/{paymentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Maintenance requests collection
    match /maintenanceRequests/{requestId} {
      allow read, write: if isAuthenticated();

      // Quotes subcollection for high-cost maintenance requests
      match /quotes/{quoteId} {
        // Anyone authenticated can read quotes
        allow read: if isAuthenticated();

        // Only maintenance staff and property managers can create quotes
        allow create: if isAuthenticated();

        // Only landlords and property managers can update quote status (approve/reject)
        allow update: if isAuthenticated();

        // No deletion of quotes, only status updates
        allow delete: if false;
      }
    }
    
    // Viewings collection
    match /viewings/{viewingId} {
      allow read: if isAuthenticated();
      allow create: if true; // Allow public users to book viewings from Listings page
      allow update: if isAuthenticated(); // Allow any authenticated user to update status
      allow delete: if isAuthenticated();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }
    
    // Memos collection
    match /memos/{memoId} {
      allow read, write: if isAuthenticated();
    }

    // Updates collection
    match /updates/{updateId} {
      allow read, write: if isAuthenticated();
    }

    // Team Members collection
    match /teamMembers/{memberId} {
      allow read, write: if isAuthenticated();
    }

    // Invitations collection
    match /invitations/{invitationId} {
      allow read: if true; // Allow reading invitations for validation
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Messages collection
    match /messages/{messageId} {
      allow read, write: if isAuthenticated();
    }

    // Conversations collection
    match /conversations/{conversationId} {
      allow read, write: if isAuthenticated();

      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Documents collection
    match /documents/{documentId} {
      allow read, write: if isAuthenticated();
    }

    // Maintenance collection
    match /maintenance/{maintenanceId} {
      allow read, write: if isAuthenticated();
    }
  }
}