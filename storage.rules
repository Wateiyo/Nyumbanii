rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Property images - only authenticated users can upload to their own folder
    match /propertyImages/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Listing images - only authenticated users can upload to their own folder
    match /listingImages/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Profile images - only authenticated users can upload to their own folder
    match /profileImages/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Profile photos - only authenticated users can upload to their own folder
    match /profilePhotos/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Profile photos (with hyphen) - support legacy path
    match /profile-photos/{userId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }

    // General uploads for authenticated users
    match /uploads/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Documents - authenticated users can upload documents
    match /documents/{tenantId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }

    // Legal notices - authenticated landlords can upload legal documents
    match /legal-notices/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }

    // Receipts - authenticated users can upload and read receipts
    match /receipts/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }
  }
}
